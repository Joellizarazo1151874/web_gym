# =====================================================
# Configuración Apache - Functional Training Gym
# =====================================================

# Habilitar reescritura de URLs
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirigir /admin (sin barra) a admin.php
    RewriteRule ^admin$ admin.php [L]
    
    # Capturar rutas inválidas después de index.php/ (ej: index.php/juan.php)
    # Si hay algo después de index.php/, redirigir al 404
    RewriteCond %{REQUEST_URI} ^/ftgym/index\.php/.+ [NC]
    RewriteRule ^index\.php/(.*)$ /ftgym/dashboard/dist/dashboard/errors/error404.php [L,R=404]
    
    # Excluir rutas que deben funcionar normalmente
    RewriteCond %{REQUEST_URI} !^/ftgym/.*api/.* [NC]
    RewriteCond %{REQUEST_URI} !^/ftgym/.*assets/.* [NC]
    RewriteCond %{REQUEST_URI} !^/ftgym/.*uploads/.* [NC]
    RewriteCond %{REQUEST_URI} !^/ftgym/.*errors/.* [NC]
    RewriteCond %{REQUEST_URI} !^/ftgym/dashboard/dist/dashboard/errors/error404\.php$ [NC]
    
    # Si el archivo o directorio existe, no reescribir
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirigir errores 404 a la página de error personalizada
    RewriteRule ^(.*)$ dashboard/dist/dashboard/errors/error404.php [L]
</IfModule>

# Configurar página de error personalizada
# La ruta debe ser absoluta desde la raíz del servidor web
# Ajustar según la ubicación del proyecto (en XAMPP suele ser /ftgym/...)
# Si el proyecto está en una subcarpeta, usar la ruta completa desde DocumentRoot
ErrorDocument 404 /ftgym/dashboard/dist/dashboard/errors/error404.php

# Configurar DirectoryIndex
<IfModule mod_dir.c>
    DirectoryIndex index.php index.html
</IfModule>

# Proteger archivos sensibles
<FilesMatch "\.(sql|md|json|log|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger carpeta database
<IfModule mod_rewrite.c>
    RewriteRule ^database/ - [F,L]
</IfModule>

# Configuración de seguridad
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Habilitar XSS protection
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Configuración de PHP (si está habilitado)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Comprimir archivos para mejor rendimiento
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache para archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
</IfModule>
